<section class="row justify-content-center">
  <div class="col-4">
    <%= link_to("Create E-mail",emails_path, method: :post, class: "btn btn-primary my-3", remote: true) %>
  </div>
  <div class="col-6">
  </div>
</section>
<section class="row justify-content-center">
  <div class="col-4">
    <div class="list-group" id="toto">
    <% @emails.each do |my_mail| %>
      <%= render('email', var_mail: my_mail) %>
    <% end %>
    </div>
  </div>
  <div id="email_window" class="col-6">
    Aucun e-mail sélectionné pour le moment
  </div>
</section>